<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">



    <g:HTMLPanel>
        <h1>Yugioh Cards</h1>
        <g:Button ui:field="homeBtn">Torna alla home</g:Button>
        <br/><br/><br/>

        <g:Label>Name Filter:</g:Label>
        <g:TextBox ui:field="nameFilter"></g:TextBox>
        <br/><br/>

        <g:Label>Race Filter:</g:Label>
        <g:ListBox ui:field="raceFilter" />

        <g:Label>Type Filter:</g:Label>
        <g:ListBox ui:field="typeFilter" />
        <br/><br/>

        <g:Button ui:field="searchButton">Search</g:Button>
        <br/><br/><br/>


        <!-- Aggiungi la tua tabella qui -->
        <g:FlexTable ui:field="cardTable">
            <!-- ... -->
        </g:FlexTable>
    </g:HTMLPanel>
</ui:UiBinder>